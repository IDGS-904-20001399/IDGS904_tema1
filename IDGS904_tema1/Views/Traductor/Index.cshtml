@model IDGS904_tema1.Models.AgregarTraductor

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Agregar Traductor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PalabraEn, "Palabra en ingles", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PalabraEn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PalabraEn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PalabraEs, "Paralabra en español", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PalabraEs, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PalabraEs, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Mostrar", "Mostrar")

@if (ViewBag.Palabras != null)
{

    <table class="table">
        <tr>
            <th>
                Palabra en Ingles
            </th>
            <th>
                Palabra en español
            </th>
        </tr>

        @foreach (IDGS904_tema1.Models.AgregarTraductor item in ViewBag.Palabras)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PalabraEn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PalabraEs)
                </td>
            </tr>
        }

    </table>
}


