@model FirstApp.Models.Temp

@{
    ViewBag.Title = "Convertir";
}

<h2>Convertir</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => Model.Grados, htmlAttributes:
           new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Grados, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="mb-3">
            @Html.RadioButtonFor(model => model.Opcion, "Celsius", new { id = "Celsius" }) @Html.Label("Celsius", "Celsius")
            @Html.RadioButtonFor(model => model.Opcion, "Fahrenheit", new { id = "Fahrenheit" }) @Html.Label("Fahrenheit", "Fahrenheit")
        </div>
        <input type="submit" value="Convertir" />
    </div>
}

<h1>El resultado es: @Html.DisplayFor(model => model.Res)</h1>
