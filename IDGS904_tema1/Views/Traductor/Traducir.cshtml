@model IDGS904_tema1.Models.Traducir

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Traducir</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Palabra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Palabra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Palabra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3">
            @Html.RadioButtonFor(model => model.Idioma, "Ingles", new { id = "Ingles" }) @Html.Label("Ingles", "Ingles")
            @Html.RadioButtonFor(model => model.Idioma, "Esapañol", new { id = "Esapñol" }) @Html.Label("Español", "Español")
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Traducir" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (ViewBag.Traduccion != null)
{
    <h1>Traduccion</h1>
    <h1>@ViewBag.Traduccion</h1>
}

